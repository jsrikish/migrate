                    dataLabels: {
                        enabled: true,
                        // format: '{point.y:.0f}', // one decimal 
                        formatter: function() {
                            if (this.y > 1000000) {
                              return Highcharts.numberFormat(this.y / 1000, 1) + "M"
                            } else if (this.y > 1000) {
                              return Highcharts.numberFormat(this.y / 1000, 1) + "K";
                            } else {
                              return this.y
                            }
                          }
                        },  
                    },
